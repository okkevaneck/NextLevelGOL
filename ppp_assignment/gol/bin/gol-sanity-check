#!/bin/sh

# compiles and tests a submission for validity

REFERENCE_OUTPUT_FILE=bin/REF_OUTPUT

OUTPUT_FILE=gol.test.out
ERROR_FILE=gol.test.err
DIFF_FILE=gol.test.diff

echo "checking for correct output"

echo prun -1 -np 2 -script $PRUN_ETC/prun-openmpi gol/gol-par 1000 1000 1000 0 0
     prun -1 -np 2 -script $PRUN_ETC/prun-openmpi gol/gol-par 1000 1000 1000 0 0 2> $ERROR_FILE | tee $OUTPUT_FILE

if grep "took" $ERROR_FILE > /dev/null ;
then
    true
else
    echo "*** The program did not print run time to stderr, please correct stderr printout:"
    cat $ERROR_FILE
    exit 1
fi

diff $REFERENCE_OUTPUT_FILE $OUTPUT_FILE > $DIFF_FILE

if test -s $DIFF_FILE;
then
    echo "*** The program generated wrong output!"
    echo "Diff between correct and found output:"
    cat $DIFF_FILE
    exit 1
else
    echo "Output ok"
fi
